<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gistone.mapper.ImageConfigMapper">


    <select id="get"  parameterType="java.lang.Integer" resultType="com.gistone.entity.ImageConfig" >
        SELECT * from image_config where id = #{id}
	</select>

    <select id="getImageConfig"  parameterType="java.lang.Integer" resultType="com.gistone.entity.ImageConfig">
        SELECT * from image_config
	</select>

    <update id="updateImageConfig" parameterType="com.gistone.entity.ImageConfig" >
        update image_config
        <set>
            <if test="null!=type1 and ''!=type1">
                type1=#{type1},
            </if>
            <if test="null!=type2 and ''!=type2">
                type2=#{type2},
            </if>
            <if test="null!=type3 and ''!=type3">
                type3=#{type3},
            </if>
            <if test="null!=number">
                number=#{number},
            </if>
        </set>
        where id=#{id}
    </update>


    <insert id="insertImageConfig" parameterType="com.gistone.entity.ImageConfig">
        INSERT INTO image_config
        (
            type1,
            type2,
            type3,
            number
        )
        VALUES(
            #{type1},
            #{type2},
            #{type3},
            #{number}
        )
    </insert>

    <delete id="deleteImageConfig" parameterType="java.lang.Integer">
		delete from image_config where id = #{id}
	</delete>





</mapper>
