<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gistone.mapper.ImageNumberMapper">


    <select id="selectName"  resultType="java.lang.String">
        SELECT name from image_number
        GROUP BY name
	</select>

    <select id="selectImageNumber"  parameterType="java.lang.String" resultType="com.gistone.entity.ImageNumber">
        SELECT a.*,b.name data from image_number a
        LEFT JOIN image_config b
        on a.image_config_id = b.id
        where name = #{name}
	</select>

    <insert id="insertImageNumber" parameterType="com.gistone.entity.ImageNumber">
        INSERT INTO image_number(
            image_config_id,
            number,
            name
        )VALUES(
            #{image_config_id},
            #{number},
            #{name}
        )
    </insert>

    <delete id="deleteImageNumber" parameterType="java.lang.Integer">
		delete from image_number where id = #{id}
	</delete>

    <update id="updateImageNumber" parameterType="Object" >
        update image_number
        <set>
            <if test="null!= imageConfigId">
                image_config_id = #{imageConfigId},
            </if>
            <if test="null!= number">
                number = #{number},
            </if>
            <if test="null!= name and ''!= name">
                name = #{name},
            </if>
        </set>
        where id=#{id}
    </update>



</mapper>
